@model BookShop.Web.Models.UserView

@{
    ViewBag.Title = "登录";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "登录不成功。请更正错误并重试。")

@using (Html.BeginForm("Logon","Account"))
{

<div style="width:780px; margin:0 auto; border:0px solid red; height:100%">
    <div id="banner"  style=" background:url(../../images/banner.jpg) no-repeat; height:100px"> </div>
    <div id="menu">
        <a href="#">首页</a>><a href="#">登陆</a>
    </div>
    <div id="login_box" style=" width:400px; height:220px; margin:0 auto; margin-top:30px; border-top:30px solid rgb(220,221,203); border-top-right-radius:10px; border-top-left-radius:10px; border-left:10px solid rgb(220,221,203); border-right:10px solid rgb(220,221,203); border-bottom:15px solid rgb(220,221,203)">
        <div id="login_box_message" style=" width:160px; margin:0 auto; margin-top:20px; color:rgb(229,156,28)">
            <span>注册用户请从这里登陆</span>

            <div id="login_box_input" style=" margin-top:20px; margin-left:-70px; width:220px">
                <span style=" float:left">用户名:</span>
            
                @Html.TextBoxFor(m => m.loginId, "", new { @class="login"})
                
                <span>密  &nbsp;码:</span>
              
                @Html.PasswordFor(m => m.loginPwd)

                <input type="submit" id="btnSubmit" style="margin-left:35px; margin-right:23px" class="loginbtn" value="登陆" />
                <input  type="button" id="cancel" style="margin-left:47px"  class="loginbtn" value="取消"/>
            </div>
        </div>
    </div>

   @* <div> @Html.Action("Index", "UserLogin")</div>*@
</div>}